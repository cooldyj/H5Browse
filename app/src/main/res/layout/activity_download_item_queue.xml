<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/download_item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/download_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:padding="15dp"
        android:src="@mipmap/download__managericon" />

    <TextView
        android:id="@+id/download_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/download_item_status"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="14sp" />


    <ProgressBar
        android:id="@+id/download_item_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/download_item_name"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/download_item_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/download_item_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/download_item_progressBar"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/download_item_status"
        android:maxLines="1"
        android:textColor="@color/colorPrimary_light_trsp"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/download_item_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/download_item_progressBar"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/download_item_status"
        android:maxLines="1"
        android:textColor="@color/colorPrimary_light_trsp"
        android:textSize="10sp" />
</RelativeLayout>
