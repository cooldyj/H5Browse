<resources>


    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarSize">48dp</item>

    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="toolBar">
        <item name="colorControlNormal">#ffffff</item>
        <item name="android:homeAsUpIndicator">@mipmap/forward_icon</item>
        <item name="android:titleTextStyle">@style/titlestyle</item>

    </style>

    <style name="titlestyle">

        <item name="android:textSize">12sp</item>
    </style>


    <!-- 自定义对话框无背景 -->
    <style name="MenuDialogBackgroundNull" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!--无边框-->
        <item name="android:windowIsFloating">true</item><!--悬浮在父界面之上-->
        <item name="android:windowIsTranslucent">true</item><!--允许呈现半透明状态-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item> <!--透明背景-->
        <item name="android:backgroundDimEnabled">true</item> <!-- 允许周围模糊 -->
        <item name="android:backgroundDimAmount">0.2</item><!--设置模糊灰度-->
        <item name="android:windowAnimationStyle">@style/MenuDialogAnimation</item><!--动画-->
    </style>

    <!-- 自定义Dialog动画 -->
    <style name="MenuDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/menu_enter</item>
        <item name="android:windowExitAnimation">@anim/menu_exit</item>
    </style>

</resources>
